    COUNT(*)
    from student a
    INNER  JOIN department c ON a.did=c.did
    inner join major d on a.mid=d.mid
    inner join sex e on a.sex=e.id
    where a.adviserid is NULL and a.did=#{did,jdbcType=INTEGER}
