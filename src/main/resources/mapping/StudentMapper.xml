    inner join sex e on a.sex=e.id
    left join teacher f on f.id=a.adviserid
    left join reply_group g on g.id=a.replygroupid
    <where>
      <if test="sid!=null">
        a.sid= #{sid,jdbcType=VARCHAR}
      </if>
      <if  test="did!=0" >
        and a.did=#{did,jdbcType=INTEGER}
      </if>
      <if  test="mid!=0" >
