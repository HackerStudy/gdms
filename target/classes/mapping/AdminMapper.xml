      </if>
      <if test="kitAdminImgUrl != null" >
        kit_admin_img_url = #{kitAdminImgUrl,jdbcType=VARCHAR},
      </if>
      <if test="groupId != null" >
        group_id = #{groupId,jdbcType=INTEGER},
      </if>
    </set>
  where kit_admin_id = #{kitAdminId,jdbcType=VARCHAR}
  </update>





